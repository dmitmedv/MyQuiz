{
  "name": "myquiz",
  "version": "1.0.0",
  "description": "A Quizlet-like application for learning foreign words",

  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --exec \"ts-node --compiler-options '{\\\"module\\\":\\\"commonjs\\\"}'\" src/server/index.ts",
    "dev:client": "cd client && npm start",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "cd client && npm run build",
    "start": "node dist/server/index.js",
    "install:all": "npm install && cd client && npm install",
    "postinstall": "npm run install:all"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  },
  "keywords": ["quiz", "learning", "vocabulary", "foreign-words"],
  "author": "",
  "license": "MIT"
} 